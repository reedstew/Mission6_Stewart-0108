@{
}

@model Movie

<style>

    h2 {
        color: #dc3545; /* Red color for h2 */
        margin-bottom: 10px;
        text-align: center;
    }

    h3 {
        margin-bottom: 20px;
        text-align: center;
    }

    form {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    input[type="hidden"],
    button,
    a.btn-info {
        margin-top: 10px;
        padding: 10px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        text-align: center;
        text-decoration: none;
        color: #fff; /* White text color */
        font-size: 16px;
    }

    button {
        background-color: #dc3545; /* Red background color for delete button */
    }

    a.btn-info {
        background-color: #17a2b8; /* Blue background color for cancel button */
    }

        button:hover,
        a.btn-info:hover {
            opacity: 0.8; /* Slightly reduce opacity on hover for both buttons */
        }
</style>

<h2>Confirm Deletion</h2>
<h3>@Model.Title Directed by @Model.Director</h3>
<form asp-controller="Home" asp-action="Delete" method="post">

    <input type="hidden" asp-for="MovieId" />

    <button type="submit">Delete</button>

    <a class="btn btn-info" asp-controller="Home" asp-action="MovieList">Cancel</a>
</form>